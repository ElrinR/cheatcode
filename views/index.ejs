<script>
function reportViolation() {
  const playerName = prompt("Enter player username:");
  if (!playerName) return;
  
  const violationType = prompt("Violation type (e.g., Aim Bot, Speed Hack, Wall Hack):");
  if (!violationType) return;
  
  const severity = prompt("Severity (Low/Medium/High/Critical):");
  if (!severity) return;
  
  fetch('/api/report-violation', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ playerName, violationType, severity })
  })
  .then(r => r.json())
  .then(data => {
    alert('âœ… ' + data.message);
    location.reload();
  });
}
</script>

