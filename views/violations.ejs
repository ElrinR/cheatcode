      <div class="violation-card severity-<%= violation.severity.toLowerCase() %>">
        <div class="violation-header">
          <h3><%= violation.player %></h3>
          <span class="severity-badge severity-<%= violation.severity.toLowerCase() %>">
            <%= violation.severity %>
          </span>
        </div>
        
        <p class="violation-type">ðŸš¨ <strong><%= violation.type %></strong></p>
        <p class="violation-date">ðŸ“… <%= violation.date %></p>
        
        <div class="violation-actions">
          <button class="btn-small btn-warning">Investigate</button>
